---
import { getProjects, type ProjectData } from '../lib/getProjects';
import { Image } from "astro:assets"

const projects: ProjectData[] = getProjects();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Art Projects</title>
  </head>
  <body>
    <h1>My Art Projects</h1>
    <ul style="list-style: none; padding: 0;">
      {projects.map((project) => (
        <li style="margin-bottom: 2rem;">
          <a href={`/portfolio/projects/${project.slug}`} style="text-decoration: none; color: inherit;">
            <div>
              <Image
                src={project.cover}
                alt={project.title}
                width={300}
                height={300}
              />
            </div>
            <h2>{project.title}</h2>
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
